<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/detail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divCentered"
    />
    <TextView
        android:id="@+id/lbl_dateTimeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="2:43AM - 09/07/2017"
        style="@style/Text.Primary"
        android:padding="16dp"
        android:layout_alignBottom="@+id/divCentered"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/divCentered"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        />

    <TextView
        android:id="@+id/lbl_textBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod mpor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud  exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteurint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim ilaborum."
        style="@style/Text.Secondary"
        android:layout_below="@+id/detail_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="16dp"/>

</RelativeLayout>
